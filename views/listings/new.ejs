<% layout("/layouts/boilerplate") -%>
<body>
    <br>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Create a New Listing</h3>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input
                        name="listing[title]"
                        placeholder="Enter title"
                        type="text"
                        class="form-control"
                        required />
                    <div class="valid-feedback">Title looks good.</div>
                    <div class="invalid-feedback">Please provide a title.</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea
                        name="listing[description]"
                        placeholder="Enter the description"
                        class="form-control"
                        required></textarea>
                    <div class="valid-feedback">Description looks good.</div>
                    <div class="invalid-feedback">Please provide a description.</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input
                        name="listing[image]"
                        id="image"
                        type="file"
                        accept="image/*"
                        class="form-control"
                        required />
                    <div class="valid-feedback">Image file looks good.</div>
                    <div class="invalid-feedback">Please upload an image file.</div>
                </div>
                

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input
                            name="listing[price]"
                            placeholder="Enter the price"
                            type="number"
                            class="form-control"
                            required />
                        <div class="valid-feedback">Price looks good.</div>
                        <div class="invalid-feedback">Please provide a price.</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input
                            name="listing[country]"
                            placeholder="Enter the country"
                            type="text"
                            class="form-control"
                            required />
                        <div class="valid-feedback">Country looks good.</div>
                        <div class="invalid-feedback">Please provide a country.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input
                        name="listing[location]"
                        placeholder="Enter the location"
                        type="text"
                        class="form-control"
                        required />
                    <div class="valid-feedback">Location looks good.</div>
                    <div class="invalid-feedback">Please provide a location.</div>
                </div>

                <div>
                    <button type="submit" class="btn btn-dark add-btn">Add</button>
                </div>
                <br>
            </form>
        </div>
    </div>
</body>

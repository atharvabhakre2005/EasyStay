<% layout("/layouts/boilerplate") -%>

<style>
  #filters {
      display: flex;
      flex-wrap: wrap;
      /* justify-content: center; */
      gap: 1rem;
      margin-top: 1rem;
      align-items: center;
      margin-left: 0%;
    }

    .filter {
      text-align: center;
      margin: 1rem;
      cursor: pointer;
      opacity: 0.9  ;
      transition: transform 0.3s ease, color 0.3s ease;
    }

    .filter i {
      font-size: 2  rem;
      color: #555;
      transition: color 0.3s ease;
    }

    .filter p {
      
      font-size: 0.8rem;
      font-weight: bold;
      color: #333;
    }

    /* Hover Effect */
    .filter:hover {
      transform: scale(1.1);
    }

    .filter:hover i {
      color: #e74c3c; /* Icon color change on hover */
      
    }

    .filter:hover p {
      color: #e74c3c;
    }
    .tax-info{
      display: none;

    }
    .tax-toggle{
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.1rem;
      padding: 1rem;
      margin-bottom: 1rem;
      margin-left: 5rem;
      display: flex;
      align-items: center;
    }
</style>
<body>
    
    <!-- <h3 class="mt-2 mb-3">All Listings</h3> -->
    <!-- <form  method="get" action="/listings/new">
        <button>Create new Listing </button>
    </form> -->
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
  
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
  
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic cities</p>
      </div>
  
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>
  
      <div class="filter">
        <div><i class="fa-solid fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
  
      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
  
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>

      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes </label>
        </div>
      </div>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2  row-cols-sm-1">
        <% for (let i = 0; i < allListings.length; i++) { %>
            
            <a href="/listings/<%= allListings[i]._id %>"><div class="card col" >
                <img style="height: 20rem;"  src="<%=allListings[i].image.url %>" class="card-img-top" alt="listing_image">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  
                  <p class="card-text">
                    <b><%= allListings[i].title %></b>
                    <br>
                    &#8377;<%= allListings[i].price.toLocaleString("en-IN")%>/night
                    <i class="tax-info">&nbsp;+&nbsp;18% GST</i>
                  </p>
                
                </div>
            </div></a>
            
              <% } %>
    </div>
    


</body>

<script>
 let taxSwitch = document.getElementById("flexSwitchCheckDefault");

taxSwitch.addEventListener("click", () => {
  let taxInfo = document.getElementsByClassName("tax-info");

  for (let info of taxInfo) {
    // Toggle display inline or none
    if (info.style.display !== "inline") {
      info.style.display = "inline";
    } else {
      info.style.display = "none";
    }
  }
});
</script>
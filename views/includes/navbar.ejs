<style>
  .navbar {
    background-color: #ffffff;
    border-bottom: 2px solid #f0f0f0;
    font-family: 'Arial', sans-serif;
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .navbar-brand {
  font-size: 1.5rem;
  font-weight: bold;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #e74c3c;
  text-decoration: none;
}

.navbar-brand i {
  font-size: 1.8rem;
  margin-left: 0.5rem; /* Adds space between the icon and the text */
}

  .nav-link {
    font-size: 1rem;
    color: #555555;
    padding: 0.5rem 1rem;
    transition: color 0.3s ease, background-color 0.3s ease;
  }

  .nav-link:hover {
    color: #e74c3c;
    background-color: rgba(231, 76, 60, 0.1);
    border-radius: 5px;
  }

  .nav-link.active {
    font-weight: bold;
    color: #e74c3c;
  }

  .navbar-nav.search-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    max-width: 600px;
  }

  .navbar-nav.search-bar form {
    display: flex;
    gap: 0.5rem;
    width: 100%;
  }

  .navbar-nav.search-bar form .form-control {
    border: 2px solid #ccc;
    border-radius: 50px;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    outline: none;
    box-shadow: none;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .navbar-nav.search-bar form .form-control:hover,
  .navbar-nav.search-bar form .form-control:focus {
    border-color: #e74c3c;
    box-shadow: 0 0 8px rgba(231, 76, 60, 0.5);
  }

  .navbar-nav.search-bar form .btn-search {
    background-color: #e74c3c;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    font-weight: bold;
    border-radius: 50px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: background-color 0.3s ease, transform 0.3s ease;
    white-space: nowrap;
  }

  .navbar-nav.search-bar form .btn-search:hover {
    background-color: #c0392b;
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .navbar-collapse {
      background-color: white;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      padding: 1rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .navbar-nav {
      flex-direction: column;
      align-items: stretch;
      width: 100%;
      gap: 0.8rem;
    }

    .navbar-nav.search-bar {
      order: -1;
      margin: 0.5rem 0 1rem;
    }

    .navbar-nav.search-bar form {
      flex-direction: row;
      flex-wrap: nowrap;
    }

    .navbar-nav.search-bar form .form-control {
      min-width: 0;
      flex: 1;
    }

    .navbar-nav.search-bar form .btn-search {
      padding: 0.5rem 0.8rem;
    }

    .navbar-brand span {
      display: none;
    }

    .nav-link {
      padding: 0.8rem;
      text-align: left;
      border-radius: 5px;
    }

    .navbar-nav.ms-auto {
      border-top: 1px solid #f0f0f0;
      padding-top: 0.8rem;
      margin-top: 0.8rem;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light sticky-top">
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-solid fa-compass"></i> EasyStay
    </a>

    <!-- Toggle button -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar links -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings"><i class="fa-solid fa-search-location"></i> Explore</a>
      </div>

      <!-- Search Bar -->
      <div class="navbar-nav ms-auto search-bar">
        <form class="d-flex" role="search" action="/search" method="get">
          <input
            class="form-control"
            type="search"
            name="q"
            placeholder="Search destinations"
            aria-label="Search"
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
        </form>
      </div>

      <!-- Additional Links -->
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new"><i class="fa-solid fa-house"></i> Showcase Your Stay</a>
        <% if (!currUser) { %>
          <a class="nav-link" href="/login"><i class="fa-solid fa-user"></i> Login</a>
          <a class="nav-link" href="/signup"><i class="fa-solid fa-user-plus"></i> Sign Up</a>
        <% } else { %>
          <a class="nav-link" href="/logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
